<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.kontakipapadogiannis.thesixthsense"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="6"
        android:targetSdkVersion="19" />

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="Menu"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.kontakipapadogiannis.thesixthsense.ResultsActivity"
            android:label="@string/title_activity_main" >
            <intent-filter>
                <action android:name="com.kontakipapadogiannis.thesixthsense.RESULTSACTIVITY" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.kontakipapadogiannis.thesixthsense.GraphActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="com.kontakipapadogiannis.thesixthsense.GRAPHACTIVITY" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity android:name="org.achartengine.GraphicalActivity" />
    </application>

</manifest>